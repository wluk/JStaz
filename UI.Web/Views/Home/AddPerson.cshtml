@model UI.Web.ViewModel.VMPerson

<h2>Dodanie nowej osoby</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("EditPerson", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @*@Html.AntiForgeryToken()*@
            <h4>Formularz dodawanai nowej osoby:</h4>
            <hr />

            <div class="form-group">
                @Html.LabelFor(m => m.FirstName, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.LastName, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.EnrollmentDate, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.EnrollmentDate, new { @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(m => m.EnrollmentDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.HireDate, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.TextBoxFor(m => m.HireDate, new { @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(m => m.HireDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Discrimination, new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    @Html.CheckBoxFor(m => m.Discrimination, new { @class = "checkbox" })
                    @Html.ValidationMessageFor(m => m.Discrimination, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Zapisz" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>